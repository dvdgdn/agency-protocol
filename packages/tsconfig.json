      "@agency-protocol/negotiation": ["./negotiation/src"],
      "@agency-protocol/commitment": ["./commitment/src"],
      "@agency-protocol/evidence": ["./evidence/src"],
      "@agency-protocol/assessment": ["./assessment/src"]
