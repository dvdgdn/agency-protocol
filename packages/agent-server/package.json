{
  "name": "@agency-protocol/agent-server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/simple-server.ts",
    "build": "tsc",
    "start": "node dist/main.js"
  },
  "nx": {
    "name": "agent-server",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "agent-server:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "agent-server:build:development"
          },
          "production": {
            "buildTarget": "agent-server:build:production"
          }
        }
      }
    }
  },
  "devDependencies": {
    "@nx/next": "^21.3.10",
    "@types/node": "^24.1.0",
    "ajv": "^8.17.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.5",
    "@nestjs/core": "^11.1.5",
    "@nestjs/platform-express": "^11.1.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  }
}
